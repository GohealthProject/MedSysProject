@model IEnumerable<MedSysProject.Models.Blog>

@{
    ViewData["Title"] = "IndexOld";
    Layout = "~/Views/Shared/_Layout_Blogs.cshtml";
}
<main id="main">
    <section>
        <div class="container">
            <div class="row">

                <div class="col-md-9">
                    <h3 class="category-title">@ViewBag.Cate</h3>

                    @* ---------開始區塊-------- *@

                    @foreach (var item in Model)
                    {

                        <div class="d-md-flex post-entry-2 half">
                            <a href="single-post.html" class="me-4 thumbnail">
                                <img src="/blogs/GetBlogImageByte/@item.BlogId" alt="" class="img-fluid" style="height:263px;">
                            </a>
                            <div>
                                <div class="post-meta"><span class="date">@Html.DisplayFor(modelItem => item.ArticleClass.BlogCategory1)</span> <span class="mx-1">&bullet;</span> <span>@Html.DisplayFor(modelItem => item.CreatedAt)</span></div>
                                <h3><a href="single-post.html">@Html.DisplayFor(modelItem => item.Title)</a></h3>
                                <p>
                                    @{
                                        string content = item.Content;
                                        string truncatedContent = content.Length > 50 ? content.Substring(0, 50) + "..." : content;

                                        <>@truncatedContent</>
                                    }
                                </p>
                                <div class="d-flex align-items-center author">
                                    <div class="photo"><img src="/blogs/GetEmpImageByte/@item.EmployeeId" alt="" class="img-fluid"></div>
                                    <div class="name">
                                        <h3 class="m-0 p-0">@Html.DisplayFor(modelItem => item.Employee.EmployeeName)</h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }

                    @* ---------結束區塊-------- *@


                    @* -------換頁------- *@

                    <div class="text-start py-4">
                        <div class="custom-pagination">
                            @{
                                if (ViewBag.Cate == null)
                                {
                                    if (ViewBag.page == null)
                                    {

                                    }

                                    else
                                    {
                                        int previous = ViewBag.page - 1;
                                        int next = ViewBag.page + 1;
                                        int current = ViewBag.page;

                                        if (ViewBag.page == 1)
                                        {
                                            <a href="~/blogs/SelectBlogCategory?page=@previous" class="prev disabled">上一頁</a>
                                        }
                                        else
                                        {
                                            <a href="~/blogs/SelectBlogCategory?page=@previous" class="prev">上一頁</a>
                                        }


                                        for (int i = 1; i <= ViewBag.MaxPage; i++)
                                        {
                                            if (i == current)
                                            {
                                                <a href="~/blogs/SelectBlogCategory?page=@i" class="active">@i</a>
                                            }
                                            else
                                            {
                                                <a href="~/blogs/SelectBlogCategory?page=@i">@i</a>
                                            }
                                        }

                                        if (ViewBag.page == ViewBag.MaxPage)
                                        {
                                            <a href="~/blogs/SelectBlogCategory?page=@next" class="prev disabled">下一頁</a>
                                        }
                                        else
                                        {
                                            <a href="~/blogs/SelectBlogCategory?page=@next" class="prev">下一頁</a>
                                        }

                                    }
                                }
                                else
                                {
                                    if (ViewBag.page == null)
                                    {

                                    }

                                    else
                                    {
                                        int previous = ViewBag.page - 1;
                                        int next = ViewBag.page + 1;
                                        int current = ViewBag.page;

                                        if (ViewBag.page == 1)
                                        {
                                            <a href="~/blogs/SelectBlogCategory?CategoryID=@ViewBag.CategoryID&page=@previous" class="prev disabled">上一頁</a>
                                        }
                                        else
                                        {
                                            <a href="~/blogs/SelectBlogCategory?CategoryID=@ViewBag.CategoryID&page=@previous" class="prev">上一頁</a>
                                        }


                                        for (int i = 1; i <= ViewBag.MaxPage; i++)
                                        {
                                            if (i == current)
                                            {
                                                <a href="~/blogs/SelectBlogCategory?CategoryID=@ViewBag.CategoryID&page=@i" class="active">@i</a>
                                            }
                                            else
                                            {
                                                <a href="~/blogs/SelectBlogCategory?CategoryID=@ViewBag.CategoryID&page=@i">@i</a>
                                            }
                                        }

                                        if (ViewBag.page == ViewBag.MaxPage)
                                        {
                                            <a href="~/blogs/SelectBlogCategory?CategoryID=@ViewBag.CategoryID&page=@next" class="prev disabled">下一頁</a>
                                        }
                                        else
                                        {
                                            <a href="~/blogs/SelectBlogCategory?CategoryID=@ViewBag.CategoryID&page=@next" class="prev">下一頁</a>
                                        }
                                    }
                                }
                            }
                        </div>
                    </div>
