  @section Scripts{
      <script>
          let planidList="";
        const Check = document.querySelectorAll(".chbox");
        const pushcount = document.querySelector("#count");
          
          Check.forEach((item)=>{
              if ( item.checked==true){
                  planidList += item.value;
                  
              }
          })
          
       
        let count =0;
        let temporary = ""; let emp = 0;
        Check.forEach(btn=>{
            btn.addEventListener("change",(event)=>{
                console.log(event.target.id);
                if(event.target.checked==true){
                    console.log(event.target.id)
                    count ++;
                    planidList += event.target.id+" ";
                }
                if(event.target.checked==false){
                    count--;
                    //let temporary = ""; let emp = "";
                    temporary = planidList;
                    planidList = temporary.replace(event.target.id);
                }
                pushcount.innerText= count;
            })
        })

        document.addEventListener("keydown",(event)=>{
            if(event.key =="Enter"){
                console.log(Check);
            }
        })
        document.querySelector("#link").addEventListener("click",()=>{

            window.location.href = `/Home/planComeparisonTotal?planlist=${planidList}`
        })


  </script>
  
  }


        


