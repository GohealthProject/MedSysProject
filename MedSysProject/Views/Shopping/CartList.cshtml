@model IEnumerable<MedSysProject.Models.CCartItem>

@{
    ViewData["Title"] = "CartList";
    Layout = "~/Views/Shared/_Layout_Shopping.cshtml";
}

<div class="container" style="margin-top:30px">
    <img src="~/img/Login2.png" />
    <div style="margin-top:20px"><span class="fs-1">購物車</span></div>
<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.小計)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.count)
            </th>
            <th></th>
        </tr>
        @{
            int 應付金額 = 0;
            int 總計 = 0;
            int 稅 = 0;
            foreach (var item in Model)
            {
                總計 += item.小計;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.小計)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.count)
                    </td>
                    <td>
                    </td>
                </tr>
            }
            稅 = (int)(總計 * 0.05);
            應付金額 = 總計 + 稅;
            <tr>
                <td>
                </td>
                <td>
                </td>
                <td>
                    訂單總計:@總計
                </td>
                <td>
                    稅額:@稅
                </td>
                <td>
                應付金額:@應付金額
                </td>
            </tr>
        }
            </table>
</div>
<div class="container " style="margin-top:30px">
    <span class="fs-1">宅配方式</span>
    <hr class="hr-dashed "/>
    <label style="margin-right:10px"><input type="checkbox" value="1" />中華郵政</label>
    <label style="margin-right:10px"><input type="checkbox" value="2" />黑貓宅急便</label>
    <label style="margin-right:10px"> <input type="checkbox" value="3" />全球快遞</label>
    <label style="margin-right:10px"><input type="checkbox" value="4" />新竹物流</label>
    <label style="margin-right:10px"><input type="checkbox" value="5" />嘉里大榮</label>
    <label style="margin-right:10px"><input type="checkbox" value="6" />蝦皮店到店</label>
    <hr class="hr-dashed" />
</div>
<div class="container" style="height:1000px; margin-top100px;">
    <span style="margin-bottom:20px" class="fs-1">付款方式</span><br />
    <input type="button" value="信用卡"/>
    <input type="button" value="超商取貨付款" />
    <input type="button" value="PAY" />
    <input type="button" value="先享後付"/>
    <input type="button" value="ATM" />
    <input type="button" value="銀行轉帳" />
    <input type="button" value="貨到付款" /> 
</div>