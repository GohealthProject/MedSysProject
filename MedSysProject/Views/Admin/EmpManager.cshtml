                        @section Scripts {
                        @{
                        await Html.RenderPartialAsync("_ValidationScriptsPartial");
                        }
                        } *@


                        <!--Footer-->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">取消</button>
                            <button class="btn btn-success">確定新增</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* ---新增彈窗結束--- *@


