        let tdph = tds[9].innerHTML;
        console.log(tdid);
        document.querySelector("#inputName").value = tdName.trim();
        document.querySelector("#inputClass").value = tdClas.trim();
        console.log(tdClas.trim());
        document.querySelector("#inputDate").value = tddate.trim();
        console.log(tddate.trim());
        document.querySelector("#inputPhone").value = tdphone.trim();
        document.querySelector("#inputEmail").value = tdemail.trim();
        document.querySelector("#inputPwd").value = tdpwd.trim();
        document.querySelector("#inputId").value = tdid.trim();
        //  FormData data = new FormData(document.querySelector("#form"));
        // console.log(data);

    }
    async function research() {
        const response = await fetch(`https://localhost:7078/api/Employees`)
        const datas = await response.json();
        console.log(datas.$values)
        let count = 1;
        const value = datas.$values.map(emp => {
            const id = emp.employeeId;
            const name = emp.employeeName;
            const date = emp.employeeBirthDate;
            const phone = emp.employeePhoneNum;
            const email = emp.employeeEmail;
            const pwd = emp.employeePassWord;
            const photo = emp.employeePhoto;
            let binary = window.atob(photo);
            let binarydata = new Uint8Array(binary.length);
            for (let i = 0 ; i <binary.length ; i++){
                binarydata[i]= binary.charCodeAt(i);
            }
            let blob = new Blob([binarydata],{type:'image/jpg'});
            let imgurl = URL.createObjectURL(blob);
            console.log(blob);
            console.log(imgurl);
            let cid = emp.employeeClassId;
            if(cid ==1){
                cid = "醫生";
            }else if(cid==2){
                cid = "護理師";
            }else{
                cid = "行政人員";
            };
            let s =
                `
                                             <tr>
                                                <td>
                                                     <input type="hidden" value=${id}>
                                                     <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                </td>
                                                <td>
                                                      ${count}
                                                 </td>
                                                 <td>
                                                         <img src="${imgurl}" width="100">
                                                  </td>
                                                  <td>
                                                       ${name}
                                                  </td>
                                                  <td>
                                                       ${cid}
                                                  </td>
                                                  <td>
                                                       ${date}
                                                   </td>
                                                   <td>
                                                        ${phone}
                                                   </td>
                                                   <td>
                                                        ${email}
                                                    </td>
                                                    <td>
                                                        ${pwd}
                                                    </td>
                                                    <td>
                                                             <a onclick="updata(this)" class="btn btn-primary" data-toggle="modal" data-target="#modalEdit">
                                                         <i class="fas fa-user-edit"></i>
                                                         </a>
                                                         <a class="btn btn-danger" onclick="get(this)">
                                                         <i class="fas fa-user-times"></i>
                                                         </a>
                                                      </td>
                                                </tr>
                                            `
                                            count++;
            console.log(count);
            return s
            
        })
        document.querySelector("#go").innerHTML = value.join("");
    }
    async function del(id) {
        const result = await Swal.fire({
            title: "確定要刪除嗎？",
            text: "此步驟將無法復原！",
            icon: "warning",
            showCancelButton: true,
            cancelButtonText: "取消",
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "確定刪除"
        });

        if (result.isConfirmed) {

            const response = await fetch(`https://localhost:7078/api/Employees/${id}`, {
                method: 'DELETE'
            });
            let data = await response.status
            if (data = 200) {
                Swal.fire({
                    title: "刪除成功!",
                    text: data,
                    icon: "success",
                    showConfirmButton: false,
                    timer: 1500
                });
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "有錯誤發生!"
                });
            }
            research()
        }
    }



</script>