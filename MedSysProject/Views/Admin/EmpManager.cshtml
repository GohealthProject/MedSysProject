            method: 'PUT',
            body: data
        });
        const state = await response.status;
        if(response.ok){
            research()
        }
    }
    //把資料印到彈出來的視窗
    function showTogget(element) {
        let par = element.closest("tr");
        let tds = par.getElementsByTagName("td");
        let tdName = tds[3].innerHTML;
        let tdClas = tds[4].innerHTML;
        let tddate = tds[5].innerHTML;
        let tdphone = tds[6].innerHTML;
        let tdemail = tds[7].innerHTML;
