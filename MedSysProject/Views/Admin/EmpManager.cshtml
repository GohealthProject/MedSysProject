                    <!--Body-->
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-md-10">
                                <form asp-action="EmpCreate" id="myUpdataform">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <input type="hidden" id="inputId" value="" name="EmployeeId" />
