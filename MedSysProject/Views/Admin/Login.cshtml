@model MedSysProject.ViewModels.CLoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GO健康 - 後台管理系統</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">
    <div>
        <div class="container">

            <!-- Outer Row -->
            <div class="row justify-content-center" style="margin-top:12em;">

                <div class="col-xl-10 col-lg-12 col-md-9" style="padding-right:100px; padding-left:100px;">

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->

                            <div class="align-self-center" style="width:60%;margin:auto">
                                <div class="p-5">
                                    @* <img class="mb-1" src="~/img/gohealth-logo.png" /> *@
                                    <div class="text-center">
                                        <h1 class="h2 text-gray-900">GO健康 管理員登入</h1>
                                    </div>
                                    <hr />
                                    <form class="user mt-2" method="post" asp-controller="Admin" asp-action="Login">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="員工帳號(E-mail)" asp-for="txtEmail" />
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="員工密碼" asp-for="txtPassWord">
                                        </div>
                                        @*                                         <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">
                                        記住我
                                        </label>
                                        </div>
                                        </div> *@
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            登入
                                        </button>

                                        <a class="btn btn-block btn-user btn-dark" id="ttestt">
                                            DEMO
                                        </a>

                                    </form>



                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js-admin/sb-admin-2.min.js"></script>

    <script>
        $("#ttestt").click(function () {
            $("#exampleInputEmail").val("James555@gmail.com");
            $("#exampleInputPassword").val("James555");
        });
    </script>
</body>

</html>