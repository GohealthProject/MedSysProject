            }
        }
        //顯示密碼(這裡是詳細資料內彈窗的按鈕)-------------


        async function research() {
            await new Promise(resolve => setTimeout(resolve, 1600));
            count = 0;
            ttt.ajax.reload();
        }
    </script>
}
