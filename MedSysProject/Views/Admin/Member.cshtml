@using MedSysProject.Models
@using MedSysProject.Controllers
@using static MedSysProject.Models.Member
@model IEnumerable<MedSysProject.Models.Member>

@{
    ViewData["Title"] = "會員管理";
    Layout = "_Layout_Admin2";
}

