<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb"> </nav>
        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @* if item.MemberImage* is null, then use default image *@
                            @{
                                if (item.MemberImage == null)
                                {
                                    <img src="@Url.Content("~/img/no_member_image.jpg")" alt="Admin" class="rounded-circle" width="150">
                                }
                                else
                                {
                                    <img src="@Url.Content("~/img/MemberImg/" + item.MemberImage)" alt="Admin" class="rounded-circle" width="150">
                                }
                            }
                            <div class="mt-3">
                                <h4>@item.MemberName</h4>
                                <p class="text-secondary mb-1">@item.MemberNickname</p>
                                <button class="btn btn-outline-primary">顯示訊息</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3"> </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">姓名</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.MemberName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">性別</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.MemberEmail
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">生日</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.MemberBirthdate
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">手機</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.MemberPhone
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">常用信箱</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.MemberEmail
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">地址</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.MemberAddress
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">連絡電話</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.MemberContactNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">統編</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.TaxId
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">登入密碼</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.MemberPassword
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">是否驗證信箱</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @{
                                    if (item.IsVerified == true)
                                    {
                                        <span class="badge badge-success">已驗證</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">未驗證</span>
                                    }
                                }
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">帳號狀態</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.VieifiedId
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>