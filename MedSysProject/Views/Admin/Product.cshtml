            }



            $(document).ready(function () {
                $('.btn-toggle-discontinued').click(function () {
                    const productId = parseInt($(this).data('product-id'));
                    const discontinued = parseBool($(this).data('discontinued'));

                    let confirmationMessage = "";
                    if (discontinued === true) {
                        confirmationMessage = "確定將此商品上架?";
                    } else {
                        confirmationMessage = "確定將此商品下架?";
                    }

                    if (confirm(confirmationMessage)) {
                        // 發送 AJAX 請求以切換「上架」狀態
                        $.ajax({
                            url: '/Admin/ToggleDiscontinued',
                            type: 'POST',
                            data: { productId: productId, discontinued: discontinued },
                            success: function (result) {
                                // 根據伺服器的回應更新 label 的文字和樣式
                                const label = $('.btn-toggle-discontinued[data-product-id="' + productId + '"]');
                                label.removeClass('btn-outline-success btn-outline-danger');

                                if (result.discontinued === true) {
                                    label.addClass('btn-outline-success');
                                    label.text('上架中');
                                } else if (result.discontinued === false) {
                                    label.addClass('btn-outline-danger');
                                    label.text('已下架');
                                } else {
                                    label.text('未確認');
                                }

                                // 更新data-discontinued屬性
                                label.data('discontinued', result.discontinued);
                            }
                        });
                    }
                });

                // 自定義函式以將字串轉換為布林值
                function parseBool(value) {
                    return value === 'True' || value === 'true';
                }
            });
        </script>








