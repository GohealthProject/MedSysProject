@model MemberWarp
@{
    ViewData["Title"] = "MemberState";
    Layout = "~/Views/Shared/_Layout_Fore.cshtml";
}

<div class="container">
    <div style="height:50px"></div>
    <div class="row g-5">
        <div class="col-md-5 col-lg-4 order-md-last">
            <div class="mb-3">
                <img class="rounded rounded-3" src="~/img/MemberImg/@Model.member.MemberImage" width=400 />
            </div>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <a asp-action="UpdataMember" asp-controller="Accout">修改會員資料</a>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <a asp-action="ResetPasswordLogined">修改會員密碼</a>
                    </div>
                </li>
                @*           <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                <a asp-action="MemberState" asp-controller="Accout">會員詳細資料</a>
                </div>
                </li> *@
            </ul>
        </div>
        <div class="col-md-7 col-lg-8">
            <form class="needs-validation" novalidate>
                <div class="row g-3">

                    <div class="col-sm-6">
                        <label for="firstName" class="form-label">會員名稱</label>
                        <input type="text" class="form-control" id="firstName" placeholder="" value="@Model.MemberName" required disabled>
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">會員論壇暱稱</label>
                        <input type="text" class="form-control" id="lastName" placeholder="" value="@Model.MemberNickname" required disabled>
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="gender" class="form-label">性別<span class="text-body-secondary">(Optional)</span></label>
                        <input type="text" class="form-control" id="gender" placeholder="男" value="@Model.MemberGender" disabled>
                        <div class="invalid-feedback">
                            性別
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="email" class="form-label">電子郵件 <span class="text-body-secondary">(Optional)</span></label>
                        <input type="email" class="form-control" id="email" placeholder="you@example.com" value="@Model.MemberEmail" disabled>
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="address" class="form-label">會員地址</label>
                        <input type="text" class="form-control" id="address" placeholder="1234 Main St" required value="@Model.MemberAddress" disabled>
                        <div class="invalid-feedback">
                            Please enter your shipping address.
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="address" class="form-label">會員生日</label>
                        <input type="text" class="form-control" id="address" placeholder="1234 Main St" required value="@Model.MemberBirthdate" disabled>
                        <div class="invalid-feedback">
                            Please enter your shipping address.
                        </div>
                    </div>





                </div>
                @*           <hr class="my-4">
                <p class="fs-2">快速登入</p>
                <div class="row">
                <div class="col-sm-4 mb-3 mb-sm-0">
