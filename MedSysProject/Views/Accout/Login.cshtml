@model MedSysProject.ViewModels.CLoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout_Fore";
}
@section LinkStyle{
    <link href="~/css/AccoutLogin.css" rel="stylesheet"/>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
}
<div class="LoginDiv">
    <div class="sideDivLeft">
        <div>
            <img src="~/img/New.jpg" style="height:300px;width:100%" />
        </div>
        <div></div>

    </div>
    <div class="sideDivRight">
        <div style="height:20%"></div>
        <form style="height:80%" method="post">
            <h1 class="h3 mb-3 fw-normal">登入</h1>

            <div class="form-floating">
                <input type="text" class="form-control" placeholder="name@example.com" name="txtEmail" id="txtAccout">
                <label for="floatingInput">請輸入帳號</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" placeholder="Password" name="txtPassWord" id="txtPassWord">
                <label for="floatingPassword">Password</label>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Remember me
                </label>
                @Html.ActionLink("註冊會員","Register","Accout",new{},new{style="margin-left:160px"})
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
            <button type="button" class="btn btn-primary w-100 py-2" id="testButton">測試</button>
            <label id="testLabel"> 123456789</label>
            <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2023</p>
        </form>
    </div>
</div>
<div style="clear:both"></div>

<script>
    $('#testLabel').css("font-size", "15px");
    $('#testButton').on('click',()=>{
        $('#txtAccout').val('night90810@gmail.com');
        $('#txtPassWord').val('Test');
    });
</script>

