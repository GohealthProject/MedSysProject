</head>
    <body>
        <header id="header" class="header d-flex align-items-center fixed-top">
        <div class ="container-fluid container-xl d-flex align-items-center justify-content-between">
            @Html.ActionLink("GoHealthyBlog","Index","Blogs",null,new{@class="h1 logo"})
            <nav id="navbar" class="navbar">
                <ul>
                    <li>@Html.ActionLink("部落格首頁","Index","Blogs",null,null)</li>
                    <li>@Html.ActionLink("單篇貼文","SinglePost","Blogs",null,null)</li>
                    <li class="dropdown">
                        <a href="#"><span>文章類別</span><i class="bi bi-chevron-down dropdown-indicator"></i></a>
                        <ul>
                            <li><a href="#">活動快訊</a></li>
                            <li><a href="#">醫療新知</a></li>
                            <li><a href="#">名人分享會</a></li>
                            <li><a href="#">媒體報導</a></li>
                            <li><a href="#">企業責任</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("關於夠健康","AboutUs","Blogs",null,null)</li>
                    <li>@Html.ActionLink("聯絡我們","ContactUs","Blogs",null,null)</li>
                </ul>
            </nav>
            <div class="position-relative">
                <a href="#" class="mx-2"><span class="bi-facebook"></span></a>
                <a href="#" class="mx-2"><span class="bi-twitter"></span></a>
                <a href="#" class="mx-2"><span class="bi-instagram"></span></a>
                <a href="#" class="mx-2 js-seacrh-open"><span class="bi-search"></span></a>
                <!--導覽列收折按鍵-->
                <i class="bi bi-list mobile-nav-toggle"></i>
                <!--搜尋-->
                <div class="search-form-wrap js-search-form-wrap">
                    <form action="#" class="search-form">
                        <!--放大鏡按鍵-->
                        <@* span class="icon bi-search"></span> *@
                        <input class="form-control" type="text" placeholder="Search">
                        <button class="btn js-search-close"><span class="bi-x"></span></button>
                    </form>
                </div>
                <!--End搜尋-->
            </div>
        </div>
       
        </header>

       @RenderBody()

        
    
        @await RenderSectionAsync("Scripts",false);
    <!-- Vendor JS Files -->
        <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
        <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- JavaScripts放這 -->
    <script src="~/assets/js/mine.js"></script>
</body>
</html>
